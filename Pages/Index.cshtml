@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<link rel="stylesheet" href="~/css/Index/Index.css">

<div class="listing-section">
    <section class="section-products">
        <div class="container">
            <div class="row justify-content-center text-center">
                <div class="col-md-8 col-lg-6">
                    <div class="header">
                        <h3>Featured Product</h3>
                    </div>
                </div>
            </div>
            <div class="row">
                @foreach (var item in Model.Product)
                {


                    <!-- Single Product -->

                    <div class="col-md-6 col-lg-3 col-xl-3 card">
                        <a href="/ProductDetail?Id=@item.id">
                            <div id="product-@item.id" class="single-product" style="background:url('@item.ImageUrl') no-repeat center;">
                                <div class="part-1">
                                    <ul>
                                        
                                    </ul>
                                </div>
                                <div class="part-2">
                                    <h3 class="product-title">@item.Name</h3>
                                    <h4 class="product-price">$@item.NetAmount</h4>
                                </div>
                            </div>
                        </a>
                    </div>


                }
            </div>
        </div>
    </section>
</div>